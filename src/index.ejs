fixUrl = function(path, url){
    //work with current.path in helper directly is not correct
    let count = path.length-1;
    let fixedUrl="";
    for(let i=0; i<count; i++){
        fixedUrl = fixedUrl.concat("../");
    }
    fixedUrl = fixedUrl.concat(url);
    return fixedUrl;
}

